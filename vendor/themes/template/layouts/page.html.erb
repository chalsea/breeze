<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= stylesheet_link_tag "breeze/breeze" %>
  </head>

  <body>
    <% if current_admin.present? %>
      <div class='editor-panel'>
        <div class='editor-help'>
          <h3>Editor Panel</h3>
          <p>Select a page element or create a new one.</p>
        </div>
      </div>
      <div class='website-panel'>
        <%= render file: "vendor/themes/template/layouts/_#{template}",
          locals: { page: page } %> 
      </div>
    <% else %>
      <%= render file: "vendor/themes/template/layouts/_#{template}", 
        locals: { page: page } %> 
    <% end %>

    <%= javascript_include_tag "breeze/breeze" %>
  </body>
</html>
