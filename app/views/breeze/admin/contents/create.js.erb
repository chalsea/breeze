<% if @content.errors.empty? %>
    $('.editor-panel').removeClass('active');
    $('.editor-panel').empty()
  $('#<%= @placement.region %>_region').append('<%= escape_javascript render(:inline => @placement.to_erb(@view)) %>');
  $('body').breeze('addContentControls', '#content_<%= @placement.id %>');
<% else %>
  var dialog = $('#new_content').closest('.ui-dialog-content');
  dialog.html('<%= escape_javascript render(:template => "/breeze/admin/contents/new") %>');
  var url = '/admin/contents/new?content[container_id]=<%= @content.container_id %>&content[region]=<%= @content.region %>&content[view]=<% @content.view %>';
  $('body').breeze('new_content_dialog_open', dialog[0], url);
<% end %>

