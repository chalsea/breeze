<fieldset class="custom-field">
  <%= hidden_field_tag "content_type[content_fields_attributes][0][id]", field.id unless field.new_record? %>
  <a href="#" class="delete" rel="delete">Delete</a>
  <ol class="form">
    <li class="text_field">
      <%= label_tag "content_type[content_fields_attributes][0][label]", "Label" %>
      <%= text_field_tag "content_type[content_fields_attributes][0][label]", field.label %>
    </li>
    <li class="text_field">
      <%= label_tag "content_type[content_fields_attributes][0][name]", "Name" %>
      <%= text_field_tag "content_type[content_fields_attributes][0][name]", field.name, :class => "custom-field-name" %>
    </li>
    <li class="select">
      <%= label_tag "content_type[content_fields_attributes][0][type]", "Type" %>
      <%= select_tag "content_type[content_fields_attributes][0][type]", 
        options_for_select(
          Breeze::Content::Custom::Field.types.map { |t| [ t.to_s, t ] }
        ),
        :class => "custom-field-type", :disabled => !field.new_record? %>
    </li>
  </ol>
  <ol class="field-options">
    <%= render :partial => "breeze/admin/types/#{field.class.name.demodulize.underscore}", :object => field unless field.class == Breeze::Content::Custom::Field %>
  </ol>
</fieldset>
