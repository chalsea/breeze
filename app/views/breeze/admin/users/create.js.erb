<% if @user.errors.empty? %>
  close_tab('new_user');
  $('#left #users').prepend('<%= escape_javascript render(:partial => "breeze/admin/users/user", :object => @user) %>');
  $('#left #users a[data-id=<%= @user.id %>]').click();
  $.flashMessage('User created.', { auto: true });
  $('#tab_<%= @user.id%>').html('<%= escape_javascript render(:template => "breeze/admin/users/edit") %>');
<% else %>
  $('#new_user').replaceWith('<%= escape_javascript render(:template => "breeze/admin/users/new") %>');
<% end %>
