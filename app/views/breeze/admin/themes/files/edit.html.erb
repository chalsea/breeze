<%= form_tag "/admin/themes/#{theme.name}/files#{@path}", :method => :put, :remote => true, :class => :editor do -%>
  <%= text_area_tag "file[contents]", @contents %>
  
  <%= content_tag :div, :class => "fake-right-sidebar" do %>
    <%= submit_tag "Save", :class => "large green save button" %>
    <%= link_to "Delete", "/admin/themes/#{theme.name}/files#{@path}", :method => :delete, :remote => true, :confirm => 'Are you sure you want to delete this file?', :class => "large red delete button" %>
  <% end %>
<% end -%>
