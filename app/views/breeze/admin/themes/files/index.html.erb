<%= link_to "Â« Back to themes", admin_themes_path, :class => "medium back button" %>

<%= content_tag :p, :class => "theme-status" do %>
  This theme is
  <% if theme.enabled? %>
    <strong>enabled</strong>.
    <%= link_to "Disable now", disable_admin_theme_path(theme.name), :class => "medium disable button" %>
  <% else %>
    <strong>disabled</strong>.
    <%= link_to "Enable now", enable_admin_theme_path(theme.name), :class => "medium enable button" %>
  <% end %>
<% end %>

<%= content_tag :div, :id => :theme_files do %>
  <%= content_tag :ul do %>
    <%= file_tree @files, :root => theme.path, :href => "/admin/themes/#{theme.name}/files%s" %>
  <% end %>
<% end -%>
