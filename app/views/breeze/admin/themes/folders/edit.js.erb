$('#left #themes .theme a[href=<%= admin_theme_files_path(theme) %>]').each(function() {
  var folders_to_open = get_open_theme_folders();
  folders_to_open.push('<%= form_action %>');
  open_theme_folder(this, { open:folders_to_open, selected:'<%= form_action %>' });
  <% if request.delete? %>
    close_tab('admin-themes-<%= theme.name %>-folders<%= @path.gsub(/[\/\.]/, '-') %>');
  <% end %>
});
