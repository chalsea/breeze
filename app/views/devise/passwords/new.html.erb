<%= form_for resource, :as => resource_name, :url => password_path(resource_name) do |form| %>
  <%= devise_error_messages! %>
  <ol class="form">
    <li><%= form.label :email %> <%= form.text_field :email %></li>
  </ol>
  <%= form.submit "Send me reset password instructions", :class => "button" %>
<% end %>
